---
interface Props{
    number: number,
    body: string
}

const {number,body} = Astro.props
---

<div class="card">
    <p class="card_p card_p-1">{number}</p>
    <p class="card_p card_p-2">{body}</p>
</div>

<style lang="SCSS">
    .card{
        display: flex;
        flex-direction: column;
        text-align: center;
        &_p-1{
            font-family: "Mochiy Pop P One",sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
        }

        &_p-2{
            font-family: Poppins,sans-serif;
            font-size: 1.2rem;
        }
    }

    @media (max-width: 575px){
        .card{
            &_p-2{
                font-size: 1rem;
            }
        }
    }
</style>